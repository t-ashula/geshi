{
    "openapi": "3.1.0",
    "info": {
        "title": "Transcriber API",
        "version": "1.0.0"
    },
    "paths": {
        "/transcribe": {
            "post": {
                "summary": "音声ファイルをアップロードして文字起こしを要求",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "file": {
                                        "type": "string",
                                        "format": "binary"
                                    },
                                    "language": {
                                        "type": "string",
                                        "example": "ja"
                                    },
                                    "model": {
                                        "type": "string",
                                        "example": "base"
                                    }
                                },
                                "required": [
                                    "file",
                                    "language"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "202": {
                        "description": "リクエストを正常に受理",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "request_id": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "リクエスト不正（形式・サイズなど）",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "サーバーエラー",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/transcribe/{request_id}": {
            "get": {
                "summary": "リクエストのステータスと結果を取得",
                "parameters": [
                    {
                        "in": "path",
                        "name": "request_id",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "処理状況または結果",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "oneOf": [
                                        {
                                            "$ref": "#/components/schemas/StatusResponse"
                                        },
                                        {
                                            "$ref": "#/components/schemas/ResultResponse"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "パラメータ不正",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "該当リクエストなし",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "サーバーエラー",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "StatusResponse": {
                "type": "object",
                "properties": {
                    "status": {
                        "type": "string",
                        "enum": [
                            "pending",
                            "working",
                            "error"
                        ]
                    },
                    "error": {
                        "type": "string",
                        "nullable": true
                    }
                }
            },
            "ResultResponse": {
                "type": "object",
                "properties": {
                    "status": {
                        "type": "string",
                        "enum": [
                            "done"
                        ]
                    },
                    "text": {
                        "type": "string"
                    },
                    "expires_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "Error": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string"
                    }
                }
            }
        }
    }
}