{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@geshi/logger": ["logger/src"],
      "@geshi/crawler": ["crawler/src"],
      "@geshi/scribe": ["scribe/src"],
      "@geshi/model": ["model/src"],
      "@geshi/ui": ["ui/src/*"]
    }
  }
}
